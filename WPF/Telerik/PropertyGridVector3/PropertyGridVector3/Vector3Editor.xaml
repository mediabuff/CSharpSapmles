<UserControl x:Class="PropertyGridVector3.Vector3Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PropertyGridVector3"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="50"/>
            <ColumnDefinition Width="*" MinWidth="50"/>
            <ColumnDefinition Width="*" MinWidth="50"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <Label Content="X"/>
            <telerik:RadNumericUpDown x:Name="XNumericUpDown" ValueChanged="XNumericUpDown_ValueChanged"/>
        </DockPanel>
        <DockPanel Grid.Column="1">
            <Label Content="Y"/>
            <telerik:RadNumericUpDown x:Name="YNumericUpDown" ValueChanged="YNumericUpDown_ValueChanged"/>
        </DockPanel>
        <DockPanel Grid.Column="2">
            <Label Content="Z"/>
            <telerik:RadNumericUpDown x:Name="ZNumericUpDown" ValueChanged="ZNumericUpDown_ValueChanged"/>
        </DockPanel>


    </Grid>
</UserControl>
